@import 'whitespace-reset.css'
@import 'mixins'
@font-face
  font-family: 'trellicons'
  src: url('trellicons.ttf') format('truetype')

body
  background: #0079bf
  overflow-y: auto
  
body, html, textarea
  font: normal 14px Helvetica, Arial, sans-serif
  color: #4D4D4D

#surface
  display: flex
  flex-direction: column

body, #surface, html
  height: 100%

a
  color: #4D4D4D
  
h3
  font-family: inherit
  font-weight: 700
  font-size: 16px
  color: #4D4D4D

header
  position: relative
  width: 100%
  height: 30px
  padding: 5px
  overflow: hidden
  flex: none
  z-index: 10
  background: #026aa7
  .button
    icon-button()
  input[type='text']
    width: 180px
    background: none
    border: none
  .header-logo
    display: inline-block
    width: 130px
    height: 30px
    background: url('/images/header-logo.png') no-repeat
  .user-info
    position: absolute
    display: inline-block
    margin-right: 0px
    right: 5px

main
  position: relative
  overflow-y: auto
  flex-grow: 1
  
.board-wrapper
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  
.board-content
  display: flex
  height: 100%
  margin-right: 0
  flex-direction: column

.board-header
  position: relative
  height: auto
  overflow: hidden
  padding: 8px 4px 8px 8px
  flex: none
  .button
    icon-button()
    display: inline-block
    background: transparent
    &:hover
      background: #026aa7
    p
      font-size: 12px
      font-weight: normal
  .board-title
    font-size: 16px
    font-weight: 700
    color: #ffffff
    text-decoration: none
  .board-menu
    position: absolute
    margin-right: 0px
    right: 8px

.board-lists
  position: relative
  flex-grow: 1
  
#board
  position: absolute
  padding: 0 0 10px 0
  margin: 0 0 10px 0
  overflow-x: auto
  overflow-y: hidden
  top: 0
  right: 0
  bottom: 0
  left: 0
  white-space: nowrap

.list-wrapper
  display: inline-block
  width: 270px
  margin: 0 5px
  height: 100%
  vertical-align: top
  box-sizing: border-box
  &:first-child
    margin-left: 10px
  .overlay
    position: fixed
    display: none
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: -1

.list
  display: flex
  position: relative
  max-height: 100%
  background: #E2E4E6
  border-radius: 3px
  box-sizing: border-box
  flex-direction: column
  .list-header
    position: relative
    padding: 8px 10px
    min-height: 20px
    font-weight: 700
    color: #4d4d4d
    flex: 0 0 auto
    .button
      icon-button()
      padding: 6px 8px
      height: 25px
      line-height: 10px
      background: transparent
      &:hover
        background: #c4c9cc
    p
      display: inline-block
      padding: 6px 0

.cards-container
  padding: 0 4px
  margin: 0 4px
  min-height: 10px
  z-index: 1
  overflow-y: auto
  overlow-x: hidden
  flex: 1 1 auto

.card-wrapper
  position: relative
  max-width: 300px
  min-height: 20px
  margin-bottom: 6px
  background: #ffffff
  border-bottom: 1px solid #cccccc
  border-radius: 3px
  cursor: pointer
  z-index: 0
  &:hover
    background: #EDEFF0
  
.card-content
  position: relative
  padding: 6px 6px 4px 8px
  overflow: hidden
  z-index: 10
  
.card-title
  display: block
  margin: 0 0 4px
  overflow: hidden
  text-decoration: none
  white-space: normal
  
.add-new-card
  display: block
  position: relative
  padding: 8px 10px
  color: #8c8c8c
  text-decoration: none
  border-radius: 0 0 3px 3px
  flex: 0 0 auto
  &:hover
    color: #4D4D4D
    text-decoration: underline
    background: #bababa
    
.new-card-form
  display: none
  textarea
    width: 230px
    border: none
    box-sizing: border-box
    resize: none
    &:focus
      outline: none

.new-card-controls
  padding-bottom: 8px
  border-radius: 0 0 3px 3px
    
    
.card-placeholder
  display: inline-block
  background: #c4c9cc
  border-radius: 3px
  z-index: -1

.list-placeholder
  display: inline-block
  width: 270px
  margin: 0 5px 0 5px
  background: #005586
  border-radius: 3px
  
.tilt
  transform: rotate(3deg)
  -moz-transform: rotate(3deg)
  -webkit-transform: rotate(3deg)
  
.add-list-placeholder
  height: 40px
  padding: 12px 10px 8px 10px
  background: #026aa7
  color: #B3CCDB
  border-radius: 3px
  box-sizing: border-box
  cursor: pointer
  &:hover
    background: #005586
    
.add-list-form
  display: none
  padding: 5px
  input[type='text']
    width: 100%
    padding: 5px
    font-size: 14px
    color: #4D4D4D
    background: rgba(0, 0, 0, .05)
    box-sizing: border-box
    border-radius: 3px
    border: 1px solid #aaaaaa
    //box-shadow: inset 1px 8px rgba(0, 0, 0, .15)

.add-list-controls
  padding: 4px 0 0 0

.submit-btn
  padding: 8px 18px
  font-size: 14px
  font-weight: 700
  border: none
  border-radius: 3px
  background: linear-gradient(to bottom, #61bd4f 0, #5aac44 100%)
  //box-shadow: 0 1px 0 #3f6f21
  color: #ffffff
  outline: none
  &:hover
    background: #539C3B
.cancel-btn
  padding: 8px 5px
  font-size: 20px
  &:hover
    color: #4D4D4D

.modal-overlay
  display: none
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  justify-content: center
  background: rgba(0, 0, 0, 0.5)
  z-index: 25
  align-items: flex-start
  justify-content: center
  overflow: auto

.comment-bg
  padding: 10px
  margin-bottom: 5px
  background: #ffffff
  border-radius: 3px
  border: 0
  box-shadow: 0 1px 2px rgba(0,0,0,.23)
  box-sizing: border-box

.card-details-modal
  display: none
  position: relative
  width: 730px
  min-height: 600px
  padding: 15px
  margin: 45px 0 50px
  background: #edeff0
  box-sizing: border-box
  border-radius: 3px
  .header
    positon: relative
    padding: 0 35px 5px 25px
    .modal-header-icon
      position: absolute
      top: 20px
      left: 15px
    > a
      position: absolute
      top: 10px
      right: 10px
      text-decoration: none
    .title
      width: 100%
      textarea
        width: 100%
        height: 30px
        padding: 5px
        resize: none
        border: none
        border-radius: 3px
        background: transparent
        box-sizing: border-box
        font-weight: 700
        font-size: 18px
        color: #4D4D4D
        &:focus
          outline: none
          background: #ffffff
    .current-list
      color: #999999
      p
        display: inline-block
        padding-right: 5px
      a
        padding-right: 10px
        text-decoration: underline
        color: #999999
        &:hover
          color: #4D4D4D
  .main-content
    float: left
    width: 550px
    padding-right: 20px
    box-sizing: border-box
    .card-information
      margin: 0 0 20px 25px
      .description
        .empty-description
          display: block
          padding: 10px
          border-radius: 3px
          cursor: pointer
          color: #999999
          &:hover
            background: #D6DADC
            color: #4D4D4D
          span
            margin-right: 8px
        .edit-description
          textarea
            width: 100%
            min-height: 110px
            padding: 7px
            resize: none
            border-color: rgba(0, 0, 0, .15);
            border-radius: 3px
            background: #E7E8E9
            box-shadow: inset 0 1px 6px rgba(0, 0, 0, .1)
            box-sizing: border-box
            outline: none
    .card-comments
      margin: 0 0 20px 25px
      .comment-header
        position: relative
        margin-bottom: 15px
        span
          position: absolute
          top: -2px
          left: -28px
      .new-comment
        position: relative
        span
          position: absolute
          top: -2px
          left: -28px
        textarea
          width: 100%
          min-height: 75px
          resize: none
          outline: none
          // border-bottom: solid 30px transparent
    .card-activity
      margin-left: 25px
      .activity-header
        position: relative
        margin-bottom: 5px
        span
          position: absolute
          top: -2px
          left: -28px
      .activity-content
        .comment-single
          padding: 15px 0
          border-bottom: 1px solid #E3E4E5
          span
            position: absolute
            left: 12px
        .comment-content
          h4
            padding-bottom: 10px        
          .comment-text
            display: inline-block
            margin-bottom: 10px
          p
            font-size: 12px
            color: #999999
      
  .sidebar
    float: left
    width: 150px
    .add-buttons, .action-buttons
      margin-bottom: 20px
  .modal-button
    display: block
    max-width: 300px
    height: 34px
    padding: 7px
    margin-top: 7px
    font-weight: 700
    font-size: 15px
    text-decoration: none
    background: #ffffff
    border: 1px solid #E2E4E6
    border-bottom-color: #cdd2d4
    border-radius: 3px
    box-sizing: border-box
    span
      margin-right: 8px
    &:hover
      color: #ffffff
      background: #298FCA
      span
        color:#ffffff

