<div class="popover-header">
  <a href="#" class="close-popover">
    <span class="icon-small icon-cancel"></span>
  </a>
  Copy Card
</div>
<div class="popover-content">
  <dl>
    <dt>
      <label for="title"><p>Title</p></label>
    </dt>
    <dd>
      <textarea></textarea>
    </dd>
  </dl>
  <dl>
    <label><p>Copy to...</p></label>
    <dt>
      <label><p>List</p></label>
    </dt>
    <dd>
      <select id="list-options">
        {{#each lists}}
        <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
        {{/each}}
      </select>
    </dd>
    <dt>
      <label><p>Position</p></label>
    </dt>
    <dd>
      <select id="position-options"></select>
    </dd>
  </dl>
  <div class="controls">
    <input type="submit" value="Create Card" class="submit-btn" />
  </div>
</div>